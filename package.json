{
  "name": "node-react-mongo",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Boilerplate MERN app to bootsrap your application with passport.js authentication",
  "main": "server.js",
  "author": "Artan Muzhaqi",
  "license": "MIT",
  "scripts": {
    "start": "env NODE_ENV=production node server.js",
    "server": "env NODE_ENV=development nodemon server.js",
    "start:dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "seed": "node ./seeders/seedUsers.js",
    "client": "cd client && npm run start"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "mongoose": "^5.9.22",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.4"
  }
}
